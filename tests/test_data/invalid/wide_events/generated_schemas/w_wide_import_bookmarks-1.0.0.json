{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "Fires when bookmarks are imported, providing metrics about the bookmark import component of an import operation.",
    "$comment": "{\"owners\":[\"jhlouw-dev\"]}",
    "type": "object",
    "required": ["meta", "global", "feature", "app"],
    "additionalProperties": false,
    "properties": {
        "meta": {
            "type": "object",
            "required": ["type", "version"],
            "additionalProperties": false,
            "properties": { "type": { "const": "w_wide_import_bookmarks" }, "version": { "const": "1.0.0" } }
        },
        "app": {
            "type": "object",
            "required": ["name", "version"],
            "additionalProperties": false,
            "properties": {
                "name": { "type": "string", "description": "The name of the application", "enum": ["Windows"] },
                "version": { "type": "string", "description": "The version of the application", "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$" }
            }
        },
        "global": {
            "type": "object",
            "required": ["platform2", "sample_rate"],
            "additionalProperties": false,
            "properties": {
                "platform2": { "type": "string", "description": "The platform the app is running on", "enum": ["Windows"] },
                "sample_rate": { "type": "number", "description": "Sample rate for this event", "minimum": 1 }
            }
        },
        "feature": {
            "type": "object",
            "required": ["name", "status", "data"],
            "additionalProperties": false,
            "properties": {
                "name": { "type": "string", "description": "The feature name for this event", "enum": ["browser-import-bookmarks"] },
                "status": { "type": "string", "description": "The overall status of the operation", "enum": ["SUCCESS", "FAILURE"] },
                "data": {
                    "type": "object",
                    "required": ["ext"],
                    "additionalProperties": false,
                    "properties": {
                        "ext": {
                            "type": "object",
                            "additionalProperties": false,
                            "properties": {
                                "import_from": {
                                    "type": "string",
                                    "description": "The source of the bookmark import",
                                    "enum": [
                                        "Google Chrome",
                                        "Microsoft Edge",
                                        "Mozilla Firefox",
                                        "Brave",
                                        "Vivaldi",
                                        "Chromium",
                                        "HTML Bookmarks File"
                                    ]
                                },
                                "item_count_bucketed": {
                                    "type": "integer",
                                    "description": "Number of bookmarks imported, bucketed to preserve privacy",
                                    "enum": [1, 5, 10, 20, 50, 100, 500, 1000]
                                },
                                "bookmark_failure_count_bucketed": {
                                    "type": "integer",
                                    "description": "If status is FAILURE, number of failed bookmark imports, bucketed to preserve privacy",
                                    "enum": [1, 5, 10, 20, 50, 100, 500, 1000]
                                }
                            }
                        },
                        "latency_ms_bucketed": {
                            "type": "integer",
                            "description": "How long the bookmark import took in milliseconds, bucketed to preserve privacy",
                            "enum": [1, 5, 10, 20, 50, 100, 500, 1000, 5000, 10000]
                        },
                        "failure_detail": {
                            "type": "string",
                            "description": "Details about the error if one occurred",
                            "enum": ["FileFormatFailure", "AccessDenied", "ParsingFailure", "UnknownFailure"]
                        }
                    }
                }
            }
        }
    }
}
